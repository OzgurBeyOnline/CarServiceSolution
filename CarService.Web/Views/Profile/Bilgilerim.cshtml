@model CarService.Web.ViewModels.CustomerEditViewModel
@{
    ViewData["Title"] = "Bilgilerim";
}

@section Styles{
    <style>
        body {
        background-color: #121212 !important;
        color: #f1f1f1;
        }

        .container {
        background-color: #1e1e1e;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.3);
        max-width: 720px;
        margin: 0 auto;
        }

        h2 {
        color: #ffffff;
        }

        .form-label {
        color: #bbbbbb;
        }

        .form-control-plaintext {
        color: #e0e0e0;
        font-weight: 500;
        background-color: transparent;
        border: none;
        padding-left: 0;
        }

        .btn-secondary {
        background-color: #2a2a2a;
        border: none;
        color: #f1f1f1;
        }

        .btn-secondary:hover {
        background-color: #444;
        color: #fff;
        }

    </style>
}

<div class="container py-5">
    <h2 class="mb-4">Bilgilerim</h2>

    <!-- Başarılı güncelleme mesajı (eğer başka yerde güncelleme yapıyorsanız) -->
    @if (TempData["ProfileSuccess"] != null)
    {
        <div class="alert alert-success">@TempData["ProfileSuccess"]</div>
    }

    <!-- Kişisel bilgiler sadece okunur modda -->
    <div class="mb-3">
        <label class="form-label">Ad Soyad</label>
        <p class="form-control-plaintext">@Model.FirstName @Model.LastName</p>
    </div>

    <div class="mb-3">
        <label class="form-label">E-posta</label>
        <p class="form-control-plaintext">@Model.Email</p>
    </div>

    <div class="mb-3">
        <label class="form-label">Telefon</label>
        <p class="form-control-plaintext">
            @(string.IsNullOrEmpty(Model.PhoneNumber) ? "—" : Model.PhoneNumber)
        </p>
    </div>

    <div class="mb-3">
        <label class="form-label">Şehir</label>
        <p class="form-control-plaintext">
            @Model.Cities.FirstOrDefault(c => c.Value == Model.CityId.ToString())?.Text
        </p>
    </div>

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
    </div>
</div>
