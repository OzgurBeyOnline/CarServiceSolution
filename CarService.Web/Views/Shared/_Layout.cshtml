@using Microsoft.AspNetCore.Identity
@using System.Threading.Tasks
@using CarService.Web.Services
@inject IJsonContentService _jsonSvc
@inject ICustomerService CustomerService
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarService</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true">
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand" asp-controller="Home" asp-action="Index">CarService</a>
      <button class="navbar-toggler" type="button"
              data-bs-toggle="collapse"
              data-bs-target="#mainNav"
              aria-controls="mainNav"
              aria-expanded="false"
              aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="mainNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Index">Anasayfa</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="About">Hakkımızda</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Contact">İletişim</a>
          </li>

          @* Admin veya Employee rolleri için ek menüler *@
          @if (User.Identity?.IsAuthenticated == true 
               && (User.IsInRole("Employee") || User.IsInRole("Admin")))
          {
            <li class="nav-item">
              <a class="nav-link" asp-controller="Appointments" asp-action="AllAppointments">
                Tüm Randevular
              </a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="servicesDropdown" role="button"
                 data-bs-toggle="dropdown" aria-expanded="false">
                Hizmet Yönetimi
              </a>
              <ul class="dropdown-menu" aria-labelledby="servicesDropdown">
                <li>
                  <a class="dropdown-item" 
                     asp-controller="ServiceTypes" 
                     asp-action="Create">
                    Yeni Servis Tipi Ekle
                  </a>
                </li>
                <li>
                  <a class="dropdown-item" 
                     asp-controller="Pricings" 
                     asp-action="Create">
                    Yeni Fiyat Bilgisi Ekle
                  </a>
                </li>
              </ul>
            </li>
          }
        </ul>

        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          @* Henüz giriş yoksa *@
          @if (!(User.Identity?.IsAuthenticated ?? false))
          {
            <li class="nav-item">
              <a class="nav-link"
                 asp-controller="Account" 
                 asp-action="Auth"
                 asp-route-returnUrl="@Url.Action("Index","Dashboard", new { area = "Admin" })">
                Giriş / Kayıt
              </a>
            </li>
          }
          else
          {
            @* Müşteri rolündekiler *@
            @if (User.IsInRole("Customer"))
            {
              <li class="nav-item">
                <a class="nav-link" asp-controller="Profile" asp-action="Bilgilerim">Bilgilerim</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Appointments" asp-action="MyAppointments">Randevularım</a>
              </li>
            }

            @* Admin rolündekiler için Dashboard linki *@
            @if (User.IsInRole("Admin"))
            {
              <li class="nav-item">
                <a class="nav-link"
                   asp-area="Admin"
                   asp-controller="Dashboard"
                   asp-action="Index">
                  Yönetim Paneli
                </a>
              </li>
            }

            @* Ortak “Hoşgeldiniz” mesajı *@
            <li class="nav-item d-flex align-items-center me-3">
              <span class="navbar-text" style="color: rgb(30, 218, 30) !important;">
                Hoşgeldiniz <strong>@User.Identity.Name</strong>
              </span>
            </li>

            <li class="nav-item">
              <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-link nav-link" style="color: red;">Çıkış Yap</button>
              </form>
            </li>
          }
        </ul>
      </div>
    </div>
  </nav>

    <!-- MAIN CONTENT -->
    <div class="container flex-grow-1 my-4">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    @{
    // We’re in a sync context (layout), so .Result is okay here.
    var footerData = _jsonSvc.LoadAsync("contact.json").Result 
                     ?? new Dictionary<string, string>();
    string F(string key, string def = "") 
        => footerData.TryGetValue(key, out var v) ? v : def;
    }
    <footer class="bg-dark text-light mt-auto py-4 border-top border-secondary">
      <div class="container">
        <div class="row">
          <div class="col-md-4 mb-3">
            <h5>CarService</h5>
            <p>2025 © CarService. Tüm hakları saklıdır.</p>
          </div>
          <div class="col-md-4 mb-3">
            <h6>Linkler</h6>
            <ul class="list-unstyled">
              <li><a class="text-light" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
              <li><a class="text-light" asp-controller="Home" asp-action="About">Hakkımızda</a></li>
              <li><a class="text-light" asp-controller="Home" asp-action="Contact">İletişim</a></li>
            </ul>
          </div>
          <div class="col-md-4 mb-3">
            <h6>İletişim</h6>
            <ul class="list-unstyled">
              <li>Email: @F("FooterEmail", "destek@carservice.com")</li>
              <li>Tel:   @F("FooterPhone", "+90 555 123 4567")</li>
              <li>Adres: @F("FooterAddress", "İstanbul, Türkiye")</li>
            </ul>
          </div>
        </div>
      </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
