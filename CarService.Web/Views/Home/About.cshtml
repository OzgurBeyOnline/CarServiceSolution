@using CarService.Web.Services
@using System.Collections.Generic
@model Dictionary<string,string>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Hakkımızda";   
    var data = Model;
    string Get(string key, string def="") 
        => data.TryGetValue(key, out var v) ? v : def;
}

@section Styles {
  <style>
    body {
      background-color: #121212;
      color: #e0e0e0;
      font-family: 'Poppins', sans-serif;
    }

    h1, h4 {
      color: #ffffff;
    }

    .bg-light {
      background-color: #1e1e1e !important;
    }

    .bg-white {
      background-color: #1a1a1a !important;
    }

    .container {
      max-width: 960px;
    }


    .card, .logo-marquee img {
      background-color: transparent;
    }

    .logo-marquee {
      border-top: 1px solid #333;
      border-bottom: 1px solid #333;
      padding: 1rem 0;
    }

    .logo-marquee img {
      filter: grayscale(1) brightness(0.8);
      transition: filter 0.3s ease;
    }
    .logo-marquee img:hover {
      filter: brightness(1.1);
    }

    .logo-marquee {
      position: relative;
      overflow: hidden;
    }
    .logo-marquee .marquee-track {
      display: inline-flex;       /* tek bir satırda akış */
      animation: marquee-scroll 15s linear infinite;
    }
    .logo-marquee img {
      height: 80px;
      object-fit: contain;
      /* img’ler arası çok hafif boşluk isterseniz buradan ayarlayın */
      margin-right: 1.5rem;
      /* son image’in margin’ini sıfırlıyoruz, böylece set biterken gap olmaz */
    }
    .logo-marquee .marquee-track img:last-child {
      margin-right: 0;
    }

    /* pause on hover isterseniz ekleyin */
    .logo-marquee:hover .marquee-track {
      animation-play-state: paused;
    }

    @@keyframes marquee-scroll {
      0%   { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }

    @@media (min-width: 768px) {
      .row.gy-4 > div {
        padding: 0 1rem;
      }
    }
  </style>
}

