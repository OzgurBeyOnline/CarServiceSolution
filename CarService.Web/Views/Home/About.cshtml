@section Styles {
  <style>
    .logo-marquee {
      position: relative;
      overflow: hidden;
    }
    .logo-marquee .marquee-track {
      display: inline-flex;       /* tek bir satırda akış */
      animation: marquee-scroll 15s linear infinite;
    }
    .logo-marquee img {
      height: 80px;
      object-fit: contain;
      /* img’ler arası çok hafif boşluk isterseniz buradan ayarlayın */
      margin-right: 1.5rem;
      /* son image’in margin’ini sıfırlıyoruz, böylece set biterken gap olmaz */
    }
    .logo-marquee .marquee-track img:last-child {
      margin-right: 0;
    }

    /* pause on hover isterseniz ekleyin */
    .logo-marquee:hover .marquee-track {
      animation-play-state: paused;
    }

    @@keyframes marquee-scroll {
      0%   { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }
  </style>
}

