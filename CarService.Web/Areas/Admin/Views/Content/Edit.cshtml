@model PageContent
@{
    ViewData["Title"] = $"{Model.Key} Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>@Model.Key Düzenle</h2>
<form asp-area="Admin"
      asp-controller="Content"
      asp-action="Edit"
      method="post">
  <input type="hidden" asp-for="Key" />
  <input type="hidden" asp-for="DisplayOrder" />

  <div class="mb-3">
    <label asp-for="Html" class="form-label">HTML İçerik</label>
    <textarea asp-for="Html"
              class="form-control"
              rows="10"></textarea>
    <span asp-validation-for="Html" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-success">Kaydet</button>
  <a asp-area="Admin" asp-controller="Content" asp-action="Index" class="btn btn-secondary ms-2">
    İptal
  </a>
</form>
