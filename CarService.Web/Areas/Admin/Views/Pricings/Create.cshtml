@model CarService.Web.ViewModels.PricingCreateViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Yeni Fiyat Bilgisi Ekle";
}

<div class="container py-4">
    <h2 class="mb-4">Yeni Fiyat Bilgisi Ekle</h2>

    @* ModelState hataları *@
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <form asp-area="Admin"
      asp-controller="Pricings"
      asp-action="Create"
      asp-route-id="@Model.Id" 
      method="post">
        @Html.AntiForgeryToken()
        
        <input asp-for="Id" type="hidden" />

        <div class="mb-3">
            <label asp-for="ServiceTypeId" class="form-label"></label>
            <select asp-for="ServiceTypeId" asp-items="Model.ServiceTypes" class="form-select">
                <option value="">— Servis Tipi Seçin —</option>
            </select>
            <span asp-validation-for="ServiceTypeId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Fiyat (TL)" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="d-flex">
            <button type="submit" class="btn btn-primary me-2">Ekle</button>
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>
@* --- Mevcut Fiyat Kayıtları Tablosu --- *@
    <h3>Mevcut Fiyatlar</h3>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Servis Tipi</th>
                <th>Fiyat (TL)</th>
                <th style="width:150px">İşlemler</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var p in ViewBag.AllPricings as IEnumerable<CarService.Web.Models.Pricing> ?? Enumerable.Empty<CarService.Web.Models.Pricing>())
        {
            <tr>
                <td>@p.ServiceType?.Name</td>
                <td>@p.Price.ToString("N2")</td>
                <td>
                    <a asp-area="Admin"
                    asp-controller="Pricings"
                    asp-action="Edit"
                    asp-route-id="@p.Id"
                    class="btn btn-sm btn-warning me-1">
                        Düzenle
                    </a>
                    <form asp-area="Admin"
                        asp-controller="Pricings"
                        asp-action="Delete"
                        asp-route-id="@p.Id"
                        method="post"
                        class="d-inline"
                        onsubmit="return confirm('Bu fiyat kaydını silmek istediğinize emin misiniz?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
